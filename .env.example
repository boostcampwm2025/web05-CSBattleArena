# ============================================
# Development & Production (필수)
# ============================================

NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=boostcamp

# JWT (임의의 32자 이상 문자열)
JWT_SECRET=your_jwt_secret_key_min_32_chars
JWT_REFRESH_SECRET=your_refresh_secret_key_min_32_chars

# ============================================
# Production Only (배포 시 필수)
# ============================================

# Frontend URL (development: http://localhost:3000)
FRONTEND_URL=http://localhost:3000

# GitHub OAuth (development에서는 비워두면 dev-login 사용)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:4000/api/auth/github/callback

# Naver Clova Studio API Key (AI 채점용)
CLOVA_STUDIO_API_KEY=

# NCP Registry (CI/CD 배포용)
NCP_REGISTRY=
